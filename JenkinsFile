pipeline {
	agent { label 'x64' }
	tools {
		maven 'Maven 3.6.2'
		jdk 'Java 8'
	}
	stages {
		stage ('Checkout') {
			steps {
				git 'https://github.com/Super-Sujay/herokuapp-testing.git'
			}
		}
		stage ('Test') {
			steps {
				bat 'mvn clean -Dthreads=2 verify'
				junit '**/target/surefire-reports/TEST-*.xml'
			}
		}
		stage ('Package') {
			steps {
				bat 'mvn package'
			}
		}
		stage ('Archive') {
			steps {
				archiveArtifacts artifacts: 'target/surefire-reports/*.*', onlyIfSuccessful: true, fingerprint: true
			}
		}
	}
}
