pipeline {
	agent { label 'x64' }
	tools {
		maven 'Maven 3.6.2'
		jdk 'Java 8'
	}
	stages {
		stage ('Checkout') {
			steps {
				git 'https://github.com/Super-Sujay/herokuapp-testing.git'
			}
		}
		stage ('Test') {
			steps {
				bat 'mvn clean -Dthreads=2 verify'
				junit '**/target/failsafe-reports/TEST-*.xml'
			}
		}
		stage ('Archive') {
			steps {
				archiveArtifacts artifacts: 'target/extent-reports/Extent Report_*.html', onlyIfSuccessful: false, fingerprint: true
			}
		}
	}
}
