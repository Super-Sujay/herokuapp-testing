pipeline {
	agent { label 'x64' }
	tools {
		maven 'Maven 3.6.2'
		jdk 'Java 8'
	}
	stages {
		stage ('Test') {
			steps {
				bat "mvn clean -Dthreads=${threads} -Dremote=${remote} -DseleniumGridURL=${gridURL} verify"
			}
		}
	}
	post {
		always {
			junit '**/target/failsafe-reports/TEST-*.xml'
			archiveArtifacts artifacts: '**/target/selenium-logs/*.log', onlyIfSuccessful: false, fingerprint: true
			emailext attachmentsPattern: '**/target/selenium-logs/*.log', body: "Build ${JOB_NAME} - ${BUILD_DISPLAY_NAME}: Check console output at ${BUILD_URL} to view the results.", subject: "${JOB_NAME} - ${BUILD_NUMBER}!", to: 'insvsawant@gmail.com'
		}
	}
}
